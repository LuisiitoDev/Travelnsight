<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Travelnsight.App.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image
                x:Name="MyImage"
                Aspect="AspectFit"
                HeightRequest="185"
                Source="dotnet_bot.png" />

            <toolkit:CameraView x:Name="MyCamera" MediaCaptured="MyCamera_MediaCaptured" />
            <Button Clicked="Button_Clicked" Text="Capture" />

            <Frame>
                <Label x:Name="LLMResult" IsEnabled="False" />
            </Frame>



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
